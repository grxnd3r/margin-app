{
  "name": "marginmaster",
  "productName": "MarginMaster",
  "version": "0.1.0",
  "description": "MarginMaster â€” a simple but fancy margin tracker for small business projects.",
  "author": {
    "name": "grxnd3r",
    "email": "grxnd3r@example.com"
  },
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/grxnd3r/margin-app.git"
  },
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:renderer\" \"bun run dev:electron\"",
    "dev:renderer": "bun dev-server.js",
    "dev:electron": "wait-on tcp:5173 && electron . --no-sandbox",
    "build": "bun run build:renderer && electron-builder build --publish never",
    "build:renderer": "bun build index.html --outdir dist/renderer --target browser",
    "dist:mac": "bun run build:renderer && electron-builder --mac",
    "dist:linux": "bun run build:renderer && electron-builder --linux",
    "preview": "echo 'Use bun build for previewing if needed'"
  },
  "build": {
    "appId": "com.marginmaster.app",
    "productName": "MarginMaster",
    "directories": {
      "output": "dist/electron"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "grxnd3r",
        "repo": "margin-app"
      }
    ],
    "files": [
      "dist/renderer/**/*",
      "src/main/**/*",
      "src/preload/**/*",
      "package.json",
      "db.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
  },
  "dependencies": {
    "@mantine/core": "^7.17.0",
    "@mantine/dates": "^7.17.0",
    "@mantine/hooks": "^7.17.0",
    "@mantine/notifications": "^7.17.0",
    "@tabler/icons-react": "^3.34.0",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.23.12",
    "lowdb": "^7.0.1",
    "nanoid": "^5.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^35.2.2",
    "electron-builder": "^26.4.0",
    "wait-on": "^8.0.4"
  }
}
